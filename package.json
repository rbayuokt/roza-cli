{
  "name": "roza-cli",
  "version": "0.1.1",
  "description": "Ramadan and prayer attendance CLI",
  "type": "module",
  "bin": {
    "puasa-cli": "./dist/cli.js",
    "puasa": "./dist/cli.js",
    "ramadan-cli": "./dist/cli.js",
    "ramzan": "./dist/cli.js",
    "ramazan": "./dist/cli.js",
    "ramadan": "./dist/cli.js",
    "roza-cli": "./dist/cli.js",
    "roza": "./dist/cli.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "start": "node dist/cli.js",
    "dev:schedule": "npm run build && clear && ROZA_INTERACTIVE=1 node dist/cli.js schedule",
    "dev:mark": "npm run build && clear && node dist/cli.js mark",
    "dev:history": "npm run build && clear && node dist/cli.js history",
    "dev:ramadan": "npm run build && clear && node dist/cli.js history --ramadan --ramadan-year 1447 --ramadan-days 30",
    "dev:backfill": "npm run build && clear && node dist/cli.js backfill",
    "dev:recap": "npm run build && clear && node dist/cli.js recap",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "lint": "eslint .",
    "format": "prettier -w .",
    "typecheck": "tsc --noEmit",
    "check": "npm run lint && npm run typecheck && npm run test && npm run build"
  },
  "keywords": [
    "ramadan",
    "ramzan",
    "roza",
    "prayer-times",
    "sehar",
    "iftar",
    "hijri",
    "cli",
    "puasa"
  ],
  "author": "rbayuokt",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rbayuokt/roza-cli"
  },
  "homepage": "https://github.com/rbayuokt/roza-cli#readme",
  "bugs": {
    "url": "https://github.com/rbayuokt/roza-cli/issues"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/node": "^25.3.0",
    "eslint": "^10.0.1",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@clack/prompts": "^1.0.1",
    "commander": "^14.0.3",
    "conf": "^15.1.0",
    "ora": "^9.3.0",
    "picocolors": "^1.1.1",
    "zod": "^4.3.6"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "npm@10.9.2",
  "publishConfig": {
    "access": "public"
  },
  "prepublishOnly": "npm run build"
}
